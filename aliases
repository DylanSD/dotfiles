# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"

# Navigation
alias cddot="cd ~/dotfiles"
alias cdproj="cd ~/projects"
# alias remote="ssh willcolb.aka.corp.amazon.com"
# alias remote="ssh dev-dsk-willcolb-2c-5995eb52.us-west-2.amazon.com"
alias remote="ssh willcolb-1-click.aka.corp.amazon.com"
alias chime="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome -app=https://app.chime.aws/"

# Brazil
alias bwss="brazil ws --sync --md"
alias bb="brazil-build"
alias bws="brazil ws"
alias bbs="brazil-build server"
alias bre="brazil-runtime-exec"

# Go to the root of a project (git root)
alias root='cd $(git rev-parse --show-cdup)'

# kill a rogue process running on a specific port
# usage: `killp 3000`
killp() { lsof -n "-i4TCP:${1:-3002}" | grep LISTEN | tr -s ' ' | cut -f 2 -d ' ' | xargs kill -9}

# Remote Sync
alias keepsync="~/dotfiles/unison/keepsync.sh"
alias tailuni="tail -f ~/.unison/unison.log"
