{
  "editor.lineNumbers": "on",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.fontFamily": "Menlo",
  "editor.snippetSuggestions": "inline",
  "editor.rulers": [100],
  "editor.acceptSuggestionOnCommitCharacter": false,

  "workbench.iconTheme": "material-icon-theme",
  "update.channel": "none",

  "eslint.autoFixOnSave": true,
  "tslint.alwaysShowRuleFailuresAsWarnings": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },

  "settings.cycle": [
    {
      "id": "lineNumber", // must be unique
      "overrideWorkspaceSettings": false,
      "values": [
        { "editor.lineNumbers": "on" },
        { "editor.lineNumbers": "relative" }
      ]
    }
  ],

  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.easymotion": false,
  "vim.sneak": false,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",

  "vim.insertModeKeyBindings": [
    {
      "before": [ "j", "k" ],
      "after": [ "<Esc>" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": ["<Esc>"],
      "after": ["<Esc>"],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": ["<Caps-Lock>"],
      "after": ["<Caps-Lock>"],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [ "<tab>" ],
      "commands": [ "editor.action.indentLines" ]
    },
    {
      "before": [ "<leader>", "y" ],
      "after": [ "\"", "a", "y" ],
    },
    {
      "before": [ "<leader>", "p" ],
      "after": [ "\"", "a", "p" ],
    },
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [ "<C-i>" ],
      "commands": [ "editor.action.showHover" ]
    },
    {
      "before": [ "<tab>" ],
      "commands": [ "editor.action.indentLines" ]
    },
    {
      "before": [ "<enter>" ],
      "commands": [ "editor.action.insertLineAfter" ]
    },
    {
      "before": [ "<C-n>" ],
      "commands": [ "workbench.files.action.focusFilesExplorer" ]
    },
    {
      "before": [ "<leader>", "," ],
      "commands": [ ":nohl" ]
    },
    {
      "before": [ "<C-w>" ],
      "commands": [ "workbench.action.closeActiveEditor" ]
    },
    {
      "before": [ "<leader>", "d" ],
      "commands": [ "editor.action.goToDeclaration" ]
    },
    {
      "before": [ "<leader>", "x" ],
      "commands": [ ":x" ]
    },
    {
      "before": [ "<leader>", "s" ],
      "commands": [ "workbench.action.files.saveAll" ]
    },
    {
      "before": [ "<C-h>" ],
      "commands": [ "workbench.action.focusLeftGroup" ]
    },
    {
      "before": [ "<C-l>" ],
      "commands": [ "workbench.action.focusRightGroup" ]
    },
    {
      "before": [ "<C-j>" ],
      "commands": [ "workbench.action.focusBelowGroup" ]
    },
    {
      "before": [ "<C-k>" ],
      "commands": [ "workbench.action.focusAboveGroup" ]
    },

    // fixes for relative numbers
    {
      "before": [ "i" ],
      "after": [ "i" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": [ "I" ],
      "after": [ "I" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": [ "a" ],
      "after": [ "a" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": [ "A" ],
      "after": [ "A" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": [ "o" ],
      "after": [ "o" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    },
    {
      "before": [ "O" ],
      "after": [ "O" ],
      "commands": [{ "command": "settings.cycle.lineNumber" }]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Solarized Light+",
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "explorer.confirmDelete": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "eslint.alwaysShowStatus": true,
  "tslint.jsEnable": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.renderIndentGuides": false,
}
